<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Neighborhood</th>
      <th>Formatted address</th>
      <th>Blog post url</th>
      <th>Location latitude</th>
      <th>Location longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.neighborhood %></td>
        <td><%= restaurant.formatted_address %></td>
        <td><%= restaurant.blog_post_url %></td>
        <td><%= restaurant.location_latitude %></td>
        <td><%= restaurant.location_longitude %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

